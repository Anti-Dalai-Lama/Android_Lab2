<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blablaarthur.lab2">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_action_name"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.blablaarthur.lab2.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.blablaarthur.lab2.ColorPicker"
            android:label="@string/colorpicker" />
        <activity
            android:name="com.blablaarthur.lab2.Notes"
            android:label="@string/notes"
            android:launchMode="singleTop"
            android:parentActivityName="com.blablaarthur.lab2.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blablaarthur.lab2.MainActivity" />
        </activity>
        <activity
            android:name="com.blablaarthur.lab2.Calculator"
            android:label="@string/calculator" />
        <activity
            android:name="com.blablaarthur.lab2.CreateNote"
            android:parentActivityName="com.blablaarthur.lab2.Notes">
            <action android:name="android.intent.myaction.CREATE" />
            <action android:name="android.intent.myaction.EDIT" />
            <action android:name="android.intent.myaction.WATCH" />

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blablaarthur.lab2.Notes" />
        </activity>
        <activity android:name="com.blablaarthur.lab2.ImageWatcher" />
    </application>

</manifest>